<!DOCTYPE html>
<html>
  <head>
    <title>RspecSample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload", media: "all" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <!-- フラッシュメッセージ -->
    <% flash.each do |key, message| %>
      <div class="alert <%= key %>"><%= message %></div>
    <% end %>

    <!-- ヘッダー -->
    <header class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <div class="d-flex w-100">
          <div class="ms-auto">
            <% if user_signed_in? %>
              <%= link_to 'ホーム', root_path, class: 'btn btn-outline-primary me-2' %>
              <%= button_to 'ログアウト', destroy_user_session_path, 
                  method: :delete, 
                  class: 'btn btn-link',
                  style: 'border: none; background: none; color: inherit; text-decoration: underline;',
                  form: { style: 'display: inline;' } %>
            <% else %>
              <%= link_to 'ログイン', new_user_session_path, class: 'btn btn-outline-primary me-2' %>
              <%= link_to 'サインアップ', new_user_registration_path, class: 'btn btn-outline-success' %>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <%= yield %>
  </body>
</html>
