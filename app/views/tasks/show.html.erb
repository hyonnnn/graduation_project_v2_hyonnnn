<div class="container mt-5">
  <h1>タスク詳細</h1>

  <p>
    <strong>タイトル:</strong>
    <%= @task[:title] %>
  </p>

  <p>
    <strong>内容:</strong>
    <%= @task[:content] %>
  </p>

  <p>
    <strong>ステータス:</strong>
    <%= @task[:status] %>
  </p>

  <% if @task[:deadline].present? %>
    <p>
      <strong>期限:</strong>
      <%= @task[:deadline].strftime('%Y/%-m/%-d %-H:%-M') %>
    </p>
  <% end %>

  <%= link_to 'タスク一覧に戻る', tasks_path, class: 'btn btn-secondary mt-3' %>
</div>
